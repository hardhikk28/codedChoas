        <h2>Self-Assessment</h2>
        <p>Take our quick self-assessment to get a better understanding of your mental health status.</p>
      
        <h1>Breathing Exercise Game</h1>
        <div class="circle"></div>
        
        <div class="instructions">
            <p id="breatheText">Breathe In...</p>
        </div>

        <script>
            let breatheText = document.getElementById("breatheText");
            let breatheState = true;

            setInterval(() => {
                if (breatheState) {
                    breatheText.innerHTML = "Breathe Out...";
                } else {
                    breatheText.innerHTML = "Breathe In...";
                }
                breatheState = !breatheState;
            }, 4000);  // Switches text every 4 seconds
        </script>

        <h1>Gratitude Journal</h1>
        <p>Write down something you're grateful for:</p>

        <input type="text" id="gratitudeInput" placeholder="I'm grateful for...">
        <button onclick="addGratitude()">Add to Journal</button>

        <ul id="gratitudeList"></ul>

        <script>
            function addGratitude() {
                let input = document.getElementById("gratitudeInput").value;
                if (input !== "") {
                    let li = document.createElement("li");
                    li.textContent = input;
                    document.getElementById("gratitudeList").appendChild(li);
                    document.getElementById("gratitudeInput").value = ""; // Clear input field
                }
            }
        </script>

    </section>

